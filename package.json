{
  "name": "visor",
  "displayName": "Visor",
  "version": "0.0.10",
  "publisher": "sidhantsriv",
  "description": "Makes a flowchart on the side for your code for better visualization.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidhant-sriv/sidvis.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "visor-container",
          "title": "Visor",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "visor-container": [
        {
          "id": "visor.flowchartView",
          "name": "Flowchart",
          "type": "webview",
          "icon": "media/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "visor.generateFlowchart",
        "title": "Generate Flowchart"
      },
      {
        "command": "visor.toggleSyntaxHighlighting",
        "title": "Toggle Syntax Highlighting"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "visor.generateFlowchart",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Visor",
      "properties": {
        "visor.syntaxHighlighting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in flowchart nodes"
        },
        "visor.syntaxHighlighting.maxCharacters": {
          "type": "number",
          "default": 200,
          "description": "Maximum characters to highlight per node"
        },
        "visor.syntaxHighlighting.maxLines": {
          "type": "number",
          "default": 10,
          "description": "Maximum lines to show per node"
        },
        "visor.syntaxHighlighting.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "auto",
          "description": "Syntax highlighting theme"
        },
        "visor.syntaxHighlighting.showLineNumbers": {
          "type": "boolean",
          "default": false,
          "description": "Show line numbers in syntax highlighted code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "clean": "rm -rf dist",
    "compile": "yarn run clean && webpack",
    "watch": "webpack --watch",
    "package": "yarn run clean && webpack --mode production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "release": "yarn run pretest && vsce publish patch && git push --follow-tags"
  },
  "dependencies": {
    "@vscode/tree-sitter-wasm": "^0.1.4",
    "web-tree-sitter": "^0.22.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
