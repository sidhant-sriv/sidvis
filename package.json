{
  "name": "sidvis",
  "displayName": "sidvis",
  "description": "Makes a flowchart on the side for your code for better visualization.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
   "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": ["onView:sidvis.flowchartView"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidvis-container",
          "title": "Sid Vis",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "sidvis-container": [
        {
          "id": "sidvis.flowchartView",
          "name": "Flowchart",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "sidvis.generateFlowchart",
        "title": "Generate Flowchart"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sidvis.generateFlowchart",
          "when": "editorTextFocus && editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "tree-sitter": "^0.25.0",
    "tree-sitter-python": "^0.23.6",
    "ts-morph": "^26.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
